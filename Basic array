#include <stdio.h>


double calculateGrossSalary(int basic) {
    double hra, da;

    if (basic < 15000) {
        hra = 0.15 * basic;
        da = 0.90 * basic;
    } else {
        hra = 5000;
        da = 0.98 * basic;
    }

    return basic + hra + da;
}

int main() {
    int basicSalary;
    double grossSalary;

    
    scanf("%d", &basicSalary);

    
    grossSalary = calculateGrossSalary(basicSala
    printf("%.2f\n", grossSalary);

    return 0;
}
